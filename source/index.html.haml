    .feedback__add-link= link_to 'Оставить отзыв', '#give_feedback'

    .modal#give_feedback
      .details
        .close= link_to "×", "#"
        .details__form
          %h3 Оставить отзыв
          = form_tag data.content.form_action do
            = hidden_field_tag :_next, value: "#thanks_for_feedback"
            = hidden_field_tag :_subject, value: "Новый отзыв на ledtech"
            = hidden_field_tag :_cc, value: data.content.cc_email
            = label_tag :username, caption: "Имя и фамилия"
            = text_field_tag :username, id: "username", placeholder: "Введите имя и фамилию"
