        = text_field_tag :height, id: "height", placeholder: "Высота"
      .form__column
        = label_tag :username, caption: "Ваше имя"
        = text_field_tag :username, id: "username", placeholder: "Имя"
        = label_tag :email, caption: "Мобильный телефон или е-mail"
