        %li неоновые доски — это отличный технологический подход.  необходимый для ведения современного бизнеса.

.banner.form
  %section
    %h2
      %a{ name: "calculate" } Рассчёт стоимости LED-изделия
    %h3 по индивидуальным размерам
    = form_tag data.content.form_action do
      = hidden_field_tag :_next, value: "#thanks_for_order"
      = hidden_field_tag :_subject, value: "Новый заказ на ledtech"
      = hidden_field_tag :_cc, value: data.content.cc_email
      .form__column
        = label_tag :product, caption: "Изделие"
        .custom-dropdown= select_tag :product, id: "product", options: %w(LED-штендер LED-доска)
        = label_tag :construction, caption: "Конструкция"
        .custom-dropdown= select_tag :construction, id: "construction", options: %w(Односторонняя Двусторонняя)
        = label_tag :width, caption: "Размеры поверхности, см"
        = text_field_tag :width, id: "width", placeholder: "Ширина"
        = text_field_tag :height, id: "height", placeholder: "Высота"
      .form__column
        = partial :credentials_fields, locals: { name_id: "customer_name_spec", email_id: "customer_email_spec" }
      %p= submit_tag "Отправить"

  .modal#thanks_for_order
    .details
      .details__message
        %h3 Ваша заявка принята
        %p Спасибо, что обратились в нашу компанию, менеджер свяжется с вами в ближайшее время.
        .btn-primary= link_to "Закрыть", "#"

.gallery
  %section
