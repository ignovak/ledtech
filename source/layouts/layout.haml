/[if IE 8] <html class="no-js lt-ie9" lang="en">
/ [if gt IE 8]><!
%html.no-js{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %title= data.page.title || "SET YOUR SITE NAME"
    %meta{:content => data.page.description || "SET YOUR SITE DESCRIPTION", :name => "description"}
    %meta{:content => "width=device-width", :name => "viewport"}
    -# = stylesheet_inline_tag "main"
    = stylesheet_link_tag "main"
  %body
    %header
      .header__content
        .logo
        %nav
          %ul.nav
            %li.nav__item.selected Главная
            %li.nav__item= link_to 'Зачем использовать', '#why_use'
            %li.nav__item= link_to 'Рассчитать размеры', '#calculate'
            %li.nav__item= link_to 'Галерея', '#gallery'
            %li.nav__item= link_to 'Отзывы', '#feedback'
            %li.nav__item= link_to 'Контакты', '#contacts'
    %div{:role => "main", :class => "main"}= yield
    :javascript
      document.querySelector('[name=_next]').value = location.href;
